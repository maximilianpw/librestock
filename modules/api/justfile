# Decrypt environment variables
decrypt:
  op inject -i .env.template -o .env

# Run the API server
run:
  go run cmd/api/main.go

# Database migrations
migrate-up:
  go run cmd/migrate/main.go -action=up

migrate-down:
  go run cmd/migrate/main.go -action=down

migrate-status:
  go run cmd/migrate/main.go -action=status
